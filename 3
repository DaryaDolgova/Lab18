using namespace std;

#include <iostream>

int main() 
{
	int N, M, i, j, K, s, p, m, w, z;

	cout << "M="; cin >> M;
	cout << "N="; cin >> N;
	int C[M][N];

for (i = 0; i < M; i++)
{
for (j = 0; j < N; j++)
{
cin >> C[i][j];
}
cout << endl;
}
	s = M * N;
	int* A = new int[s];
	int* B = new int[N];
	w = 0; p = 1; m = 999999;
	for (i = 0; i < N; i++) {
		for (z = i; z <= s; z += N) {
			p*= A[z];
		}
		B[i] = p;
		p = 1;
	}
	for (i = 0; i < N; i++) {
		if (B[i] < m) {
			m = B[i];
			w = i;
		}
	}
	cout << "nomer" << w << endl;
	cout << "proizvedenie" << w << "stolbca " << m << endl;
	return 0;
}
